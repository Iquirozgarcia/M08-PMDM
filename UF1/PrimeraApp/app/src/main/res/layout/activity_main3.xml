<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity3">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="159dp" android:id="@+id/textView" android:layout_weight="1"
                android:textSize="60sp"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:weightSum="100">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="25">
                <Button
                        android:text="7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/button10" android:textSize="96sp"/>
                <Button
                        android:text="8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button4" android:textSize="96sp"/>
                <Button
                        android:text="9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"
                        android:textSize="96sp"/>
                <Button
                        android:text="C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button2" android:textSize="96sp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="25">
                <Button
                        android:text="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button7" android:textSize="96sp"/>
                <Button
                        android:text="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button6" android:textSize="96sp"/>
                <Button
                        android:text="6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button5" android:textSize="96sp"/>
                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button9" android:textSize="96sp"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button15" android:textSize="96sp"/>
                <Button
                        android:text="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button14" android:textSize="96sp"/>
                <Button
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button13" android:textSize="96sp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="25">
                <Button
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button12" android:textSize="96sp"
                        android:layout_span="3"/>
                <Button
                        android:text="="
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button8" android:textSize="96sp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>